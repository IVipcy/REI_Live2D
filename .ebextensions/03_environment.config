option_settings:
  aws:elasticbeanstalk:application:environment:
    # SECRET_KEY: 環境変数で設定してください
    PORT: "8000"
    
    # 音声設定
    VOICE_TYPE: "coefont"  # coefont または openai
    
    # Supabase設定（環境変数で設定してください）
    # SUPABASE_URL: 環境変数で設定
    # SUPABASE_KEY: 環境変数で設定
    
    # OpenAI設定（環境変数で設定してください）
    # OPENAI_API_KEY: 環境変数で設定
    
    # RAG設定
    CHROMA_DB_PATH: "data/chroma_db"
    
    # CoeFont API設定（環境変数で設定してください）
    # COEFONT_ACCESS_KEY: 環境変数で設定
    # COEFONT_ACCESS_SECRET: 環境変数で設定
    # COEFONT_VOICE_ID: 環境変数で設定 