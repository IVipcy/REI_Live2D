container_commands:
  01_update_pip:
    command: |
      source /var/app/venv/*/bin/activate
      pip install --upgrade pip setuptools wheel
    ignoreErrors: true
    
  02_install_chromadb_deps:
    command: |
      source /var/app/venv/*/bin/activate
      pip install numpy==1.24.3 pydantic typing-extensions --no-cache-dir
    ignoreErrors: true
    
  03_install_chromadb:
    command: |
      source /var/app/venv/*/bin/activate
      pip install chromadb==0.4.22 --no-cache-dir
    ignoreErrors: true
    
  04_install_langchain:
    command: |
      source /var/app/venv/*/bin/activate
      pip install langchain==0.1.0 langchain-openai==0.0.5 langchain-community==0.0.10 --no-cache-dir
    ignoreErrors: true
    
  05_verify_installation:
    command: |
      source /var/app/venv/*/bin/activate
      python -c "import chromadb; import langchain; print('ChromaDB and Langchain installed successfully')"
    ignoreErrors: true 